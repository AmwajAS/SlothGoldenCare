<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
              android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="286dp"
        android:contentDescription="@string/login_failed"
        app:srcCompat="@drawable/older" />


    <EditText
        android:id="@+id/userid"
        android:layout_width="356dp"
        android:layout_height="81dp"
        android:backgroundTint="#143a84"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:layout_margin="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/id"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="311dp"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="#143a84"
            android:fontFamily="sans-serif-black"
            android:text="@string/login"
            android:textColor="#fff" />

        <RadioGroup android:id="@+id/login_option_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:orientation="horizontal">
            <RadioButton android:id="@+id/relative_login_radio_button" android:layout_width="0dp" android:layout_weight="1" android:text="@string/relative_login" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/doctor_login_radio_button" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/doctor_login"/>
            <RadioButton android:id="@+id/admin_login_radio_button" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/admin_login"/>
            <RadioButton android:id="@+id/elderly_login_radio_button" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/elderly_login"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/elderBtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#143a84"
            android:fontFamily="sans-serif-black"
            android:text="@string/elderSignup"
            android:textColor="#fff"

            />

        <Button
            android:id="@+id/userBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttonradios"
            android:fontFamily="sans-serif-black"
            android:text="@string/userSignup"
            android:textColor="#143a84"

            />
    </LinearLayout>

    <ProgressBar
            android:id="@+id/progress_bar_login"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/langBtn"
        android:layout_width="61dp"
        android:layout_height="67dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:onClick="showMenu"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/baseline_language_24" />

</LinearLayout>